<h1>Movies</h1>

{{#each movies}}
  <h2>Title: {{this.title}}</h2>
  <a href="/movies/{{this.id}}">Want to know more about {{this.title}}??</a>
    <br>
  <a href="/movies/{{this.id}}/edit">Something wrong? Edit the info here</a>
  <form action="/movies/{{this._id}}/delete" method="POST">
    <h4>Wanna delete this movie?</h4>
    <button type="submit">Delete movie</button>
  </form>

{{/each}}
<br>
